# Auth Service Development Environment

# Service Configuration
SERVICE_NAME=auth-service
ENVIRONMENT=development
PORT=8001
HOST=0.0.0.0

# Vault Configuration (for fetching secrets)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_SECRET_PATH=secret/data/auth-service

# Direct Database URL for development (fallback if Vault is not available)
# These will be overridden by Vault secrets if available
DATABASE_URL=postgresql+asyncpg://auth_service:auth_dev_password@localhost:5432/auth_db
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=DEBUG

# Email Configuration (using Mailhog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=false
EMAIL_FROM=noreply@refertosicuro.local
EMAIL_FROM_NAME=RefertoSicuro Dev

# Development Only - Never use in production!
DEV_MODE=true
REQUIRE_EMAIL_VERIFICATION=false