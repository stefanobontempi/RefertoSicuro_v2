# Notification Service - Test Environment Configuration
ENVIRONMENT=test
SERVICE_NAME=notification-service
PORT=8015
LOG_LEVEL=DEBUG

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=refertosicuro
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=refertosicuro_notification_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_VHOST=refertosicuro
RABBITMQ_EXCHANGE=refertosicuro.events.test
RABBITMQ_QUEUE=notification.queue.test
RABBITMQ_DLQ=notification.failed.test
RABBITMQ_PREFETCH_COUNT=10

# SMTP (MailHog for testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USE_TLS=false
SMTP_USE_SSL=false
SMTP_FROM=noreply@refertosicuro.it
SMTP_FROM_NAME=RefertoSicuro

# Email Configuration
EMAIL_ENABLED=true
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY_SECONDS=5

# SMS & Push (disabled in test)
SMS_ENABLED=false
PUSH_ENABLED=false

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Template Directory
TEMPLATE_DIR=app/templates/email

# Vault (disabled in test)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
